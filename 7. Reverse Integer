```
// this is my first submission
class Solution {
public:
    int reverse(int x) {
        if(x > 2147483647 || x < -2147483647) return 0;
        if(x > -10 && x < 10) return x;
        int result  = 0;
        while(x >= 10 || x <= -10){
            result = result * 10 + x % 10;
            x = x / 10;
        }
        
        if(result > 214748364 || result < -214748364) return 0;
        if((result == 214748364 || result == -214748364) && (x >=7 || x <=-7)) return 0;
        result = result * 10 + x;
        return result;
    }
};


```
// this is the improved version, we can do all things in one loop, and judge the overflow by temp / 10 != result
class Solution {
public:
    int reverse(int x) {
        if(x > INT_MAX || x < INT_MIN) return 0;
        if(x > -10 && x < 10) return x;
        int result  = 0;
        while(x){
            int temp = result * 10 + x % 10;
            if(temp / 10 != result)
            return 0;
            x = x / 10;
            result = temp;
        }
        
        return result;
    }
};
